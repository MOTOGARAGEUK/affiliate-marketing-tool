{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": {
        "x-vercel-subdomain": "affiliates"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/sync-sharetribe-referrals",
      "schedule": "0 0 * * *"
    }
  ]
} 